<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:Shooter_Game"
             x:Class="Shooter_Game.GamePage"
             Title="GamePage"
             BackgroundImageSource="game_background.png">
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <VerticalStackLayout HorizontalOptions="Start">
                <Image x:Name="Current_Weapon"
                       IsVisible="False"/>
                <Label x:Name="Ammo"
                       Text="28/28"
                       IsVisible="False"
                       TextColor="Gray"
                       FontSize="20"/>
            </VerticalStackLayout>
        </HorizontalStackLayout>
        <HorizontalStackLayout HorizontalOptions="Center"
                               VerticalOptions="Center">
            <VerticalStackLayout>
                <Label x:Name="Count_Txt"
                       Text="Game Starts in..."
                       IsVisible="True"
                       TextColor="Red"
                       FontFamily="PermanentMarker"
                       FontSize="100"/>
                <Label x:Name="Start_Countdown"
                       Text="3"
                       IsVisible="True"
                       TextColor="Red"
                       FontFamily="PermanentMarker"
                       FontSize="100"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Grid x:Name="Play_Area"
                  IsVisible="False"
                  HeightRequest="675"
                  WidthRequest="1600">
                <Image x:Name="Player_Char"
                       Source="walking_left.png"
                       HorizontalOptions="Center"
                       VerticalOptions="End"
                       WidthRequest="50"
                       HeightRequest="70"/>
            </Grid>
        </HorizontalStackLayout>
        <HorizontalStackLayout HorizontalOptions="End"
                               VerticalOptions="End">
            <Label x:Name="Round_Count"
                   Text="Round: 1"
                   IsVisible="False"
                   TextColor="Red"
                   FontFamily="PermanentMarker"
                   FontSize="40"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>