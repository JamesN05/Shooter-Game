<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Shooter_Game.MainPage"
             BackgroundImageSource="menu_background.jpg">
    <ScrollView>
        <VerticalStackLayout>
            <HorizontalStackLayout HorizontalOptions="Center"
                                   Margin="40">
                <Label Text="Shooter Game"
                           FontSize="50"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout HorizontalOptions="Center">
                <Button x:Name="Settings_Button"
                        Text="⚙"
                        Clicked="Settings_Button_Clicked"
                        Margin="5"
                        Background="SaddleBrown"/>
                <Button x:Name="SaveLoad_Button"
                        Text="Save/Load"
                        Clicked="SaveLoad_Button_Clicked"
                        Margin="5"
                        Background="SaddleBrown"
                        TextColor="LawnGreen"
                        FontAttributes="Bold"/>
                <Button x:Name="Start_Button"
                        Text="Start Game"
                        Clicked="Start_Button_Clicked"
                        Margin="5"/>
                <Button x:Name="Stats_Button"
                        Text="Stats"
                        Clicked="Stats_Button_Clicked"
                        Margin="5"/>
                <Button x:Name="Shop_Button"
                        Text="Shop"
                        Clicked="Shop_Button_Clicked"
                        Margin="5"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout HorizontalOptions="Center">
                <Button x:Name="Catalogue_Button"
                        Text="Weapons and Power-Ups Catalogue"
                        Clicked="Catalogue_Button_Clicked"
                        Margin="5"/>
                <Button x:Name="Credits_Button"
                        Text="Credits"
                        Clicked="Credits_Button_Clicked"
                        Margin="5"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
